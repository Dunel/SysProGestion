generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Coderegister {
  id        String   @id @default(cuid())
  code      Int
  mail      String   @unique
  updatedAt DateTime @updatedAt
}

model User {
  id        Int      @id @default(autoincrement())
  cedula    Int      @unique
  mail      String   @unique
  password  String
  names     String
  lastnames String
  role      Role     @default(estudiante)
  phone     String
  updatedAt DateTime @updatedAt
}

enum Role {
  alcaldia
  estudiante
  dependencia
}

model PreRegister {
  id        Int      @id @default(autoincrement())
  cedula    Int      @unique
  mail      String   @unique
  role      Role     @default(estudiante)
  updatedAt DateTime @updatedAt
}
